<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoadingScreen"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loading_screen_picture"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/loading_screen_picture"
        />

    <TextView
        android:id="@+id/loading_screen_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/loading_screen_title"
        android:gravity="center"
        android:textSize="48dp"
        />
    <TextView
    android:id="@+id/loading_screen_subtitle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/loading_screen_subtitle"
    android:gravity="center"
    android:textSize="24dp"
    />
</LinearLayout>
